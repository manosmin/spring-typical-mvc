# Environment Variables Template
#
# SETUP INSTRUCTIONS:
# 1. Copy this file: copy .env.template .env
# 2. Replace placeholder values with your actual credentials

# Active Spring Profile
# Options: dev (development), prod (production)
SPRING_PROFILES_ACTIVE=dev

# PostgreSQL Database Configuration
# Format: jdbc:postgresql://host:port/database
DB_URL=jdbc:postgresql://localhost:5432/bookstore_dev
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Auth0 Configuration
OAUTH2_CLIENT_ID=your_client_id_here
OAUTH2_CLIENT_SECRET=your_client_secret_here

# Optional: Override server port
# SERVER_PORT=8080
